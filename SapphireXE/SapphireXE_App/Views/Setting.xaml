                                                                <Setter Property="Background" Value="Transparent"/>
                                                            </Style>
                                                            <Style TargetType="{x:Type DataGrid}">
                                                                <Setter Property="BorderBrush" Value="Black"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </Style>
                                                        </DataGrid.Resources>
