<UserControl x:Class="SapphireXR_App.Controls.MonitoringMeter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
             xmlns:local="clr-namespace:SapphireXR_App.Controls"
             mc:Ignorable="d"
             x:Name="monitoringMeter"
             d:DesignHeight="20" d:DesignWidth="70">
    
    <UserControl.Resources>
        <local:OnLoadedCommandParamConverver x:Key="onLoadedCommandConverter" />
        <Style x:Key="ControllerStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Border  BorderBrush="LightGray" BorderThickness="0,0,1,1" Grid.RowSpan="2" >
                                <Label x:Name="meterValue"  Height="16" Width="70" FontSize="12" HorizontalContentAlignment="Right" 
                                    Content="{Binding PresentValue}" Foreground="Lime" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OnLoadedCommand}">
                <i:InvokeCommandAction.CommandParameter>
                    <MultiBinding Converter="{StaticResource onLoadedCommandConverter}">
                        <Binding Path="Type" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                        <Binding Path="ControllerID" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                    </MultiBinding>
                </i:InvokeCommandAction.CommandParameter>
            </i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Button Height="20" Width="70" Style="{StaticResource ControllerStyle}" />
    
</UserControl>
