<UserControl x:Class="SapphireXR_App.Controls.SourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SapphireXR_App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="54">
	<Grid>
		<StackPanel Width="54" Height="22">
			<StackPanel  Height="11">
				<Ellipse Width="7" Height="7" Fill="LawnGreen" HorizontalAlignment="Right" Margin="0,3,3,0"/>
				<Label x:Name="SetValue" Foreground="Black" HorizontalAlignment="Left" />
			</StackPanel>
			<StackPanel Background="{DynamicResource MFCSecondaryColor}">
				<Label x:Name="CurValue" Foreground="Black" HorizontalAlignment="Right" />
			</StackPanel>
		</StackPanel>

	</Grid>
</UserControl>
