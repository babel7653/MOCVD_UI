<UserControl x:Class="SapphireXR_App.Controls.SourceMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SapphireXR_App.Controls"
             xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
             mc:Ignorable="d" 
             x:Name="sourceMonitor"
             Loaded="sourceMonitor_Loaded"
             d:DesignHeight="34" d:DesignWidth="70">
    <Grid Height="34" Width="70">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="sourceName" Grid.Row="0" Height="14" Width="70" Background="{StaticResource SourceMonitorColor1}"
                   FontSize="12" TextAlignment="Center"
                   VerticalAlignment="Center" Padding="0" />
        <Border Grid.Row="1" BorderBrush="{StaticResource SourceMonitorColor1}" BorderThickness="1,0,1,1">
            <StackPanel Orientation="Horizontal">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{Binding OnMouseOverBackground}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <Label x:Name="G" Height="20" Width="50" FontSize="14" HorizontalContentAlignment="Right" 
                   VerticalAlignment="Center" Padding="0" Content="{Binding PresentValue}" Foreground="Lime" />
                <Ellipse Width="10" Height="10" Fill="Lime" HorizontalAlignment="Right"  Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding MouseLeftButtonDownCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers> 
    </Grid>
</UserControl>
