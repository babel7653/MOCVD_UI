<Page x:Class="SapphireXR_App.Views.LeftDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SapphireXR_App.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1040" d:DesignWidth="300"
      Title="LeftDashboard">
    <Page.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="NanumGothic"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource Gray_100}" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="12"/>
            <RowDefinition Height="118"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="176"/>
            <RowDefinition Height="258"/>
            <RowDefinition Height="99"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Machine Information -->
        <Grid Margin="12,0,12,8" Grid.Row="1">
            <StackPanel Margin="0,0,138,71" Height="34">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="10" Foreground="{DynamicResource Gray_900}"><Run Text="Machine Nam"/><Run Language="ko-kr" Text="e"/></TextBlock>
                <TextBlock FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="12" Foreground="{DynamicResource Gray_950}" FontWeight="Bold"><Run Text="Machine Nam"/><Run Language="ko-kr" Text="e"/></TextBlock>
            </StackPanel>
            <StackPanel Margin="138,0,0,83" Height="34">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="10" Foreground="{DynamicResource Gray_900}"><Run Language="ko-kr" Text="Application"/></TextBlock>
                <TextBlock FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="12" Foreground="{DynamicResource Gray_950}" FontWeight="Bold" RenderTransformOrigin="0.563,1.979"><Run Language="ko-kr" Text="GaN"/></TextBlock>
            </StackPanel>
            <StackPanel Margin="0,35,138,48" Height="34">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="10" Foreground="{DynamicResource Gray_900}"><Run Language="ko-kr" Text="System ID"/></TextBlock>
                <TextBlock FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="12" Foreground="{DynamicResource Gray_950}" FontWeight="Bold"><Run Language="ko-kr" Text="2024 SKKU2"/></TextBlock>
            </StackPanel>
            <StackPanel Margin="138,35,0,48" Height="34">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="10" Foreground="{DynamicResource Gray_900}"><Run Text="PLC "/><Run Language="ko-kr" Text="C"/><Run Text="onnection"/></TextBlock>
                <TextBlock Text="{Binding PLCConnectionStatus}" FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="12" Foreground="{DynamicResource Sapphire_Blue}" FontWeight="Bold"><Run Text="Machine Nam"/><Run Language="ko-kr" Text="e"/></TextBlock>
            </StackPanel>
            <StackPanel Margin="0,70,138,13" Height="34">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="10" Foreground="{DynamicResource Gray_900}"><Run Language="ko-kr" Text="PLC Address"/></TextBlock>
                <TextBlock Text="{Binding PLCAddressText}" FontFamily="Segoe UI" Margin="0,0,0,0" FontSize="12" Foreground="{DynamicResource Gray_950}" FontWeight="Bold"><Run Text="Machine Nam"/><Run Language="ko-kr" Text="e"/></TextBlock>
            </StackPanel>
        </Grid>
        <!-- Signal Tower -->
        <Grid Grid.Row="3" Margin="12,0,12,2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Rectangle}">
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="Height" Value="10"/>
                        <Setter Property="Stroke" Value="LightSlateGray"/>
                    </Style>
                </StackPanel.Resources>
                <Rectangle x:Name="SignalTowerRed" Fill="{Binding SignalTowerRed, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="10" RadiusX="4" RadiusY="4" Margin="4,0,0,0" Stroke="{x:Null}"/>
                <Rectangle x:Name="SignalTowerYellow" Fill="{Binding SignalTowerYellow, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="10" RadiusX="4" RadiusY="4" Margin="4,0,0,0" Stroke="{x:Null}"/>
                <Rectangle x:Name="SignalTowerGreen" Fill="{Binding SignalTowerGreen, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="10" RadiusX="4" RadiusY="4" Margin="4,0,0,0" Stroke="{x:Null}"/>
                <Rectangle x:Name="SignalTowerBlue" Fill="{Binding SignalTowerBlue, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="10" RadiusX="4" RadiusY="4" Margin="4,0,0,0" Stroke="{x:Null}"/>
                <Rectangle x:Name="SignalTowerWhite" Fill="{Binding SignalTowerWhite, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="10" RadiusX="4" RadiusY="4" Margin="4,0,0,0" Stroke="{x:Null}"/>
                <Rectangle x:Name="SignalTowerBuzzer" Width="44" Height="10" RadiusX="4" RadiusY="4" Margin="4,0,0,0" Stroke="{x:Null}" />
            </StackPanel>
        </Grid>
        <!-- Source Valve Current Status -->
        <Grid Grid.Row="4" VerticalAlignment="Center" Height="228">
            <StackPanel Orientation="Vertical" Height="229" VerticalAlignment="Top" Margin="12,0,12,0">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="Margin" Value="0,6,5,0"/>
                    </Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Width" Value="64"/>
                        <Setter Property="Height" Value="22"/>
                        <Setter Property="Background" Value="LightGray"/>
                        <Setter Property="Foreground" Value="DarkBlue"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="TextAlignment" Value="Right"/>
                    </Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </StackPanel.Resources>
                <Line X1="5" Y1="0" X2="295" Y2="0" Stroke="{DynamicResource Gray_300}" StrokeThickness="2" HorizontalAlignment="Center" Width="300"/>
                <TextBlock Foreground="{DynamicResource Gray_950}" FontSize="12" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Left" Margin="28,6,0,0" VerticalAlignment="Center"><Bold><Run Text="Source Status"/></Bold></TextBlock>

                <Grid VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="68
                                          "/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Carrier" HorizontalAlignment="Center" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="10"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Source" HorizontalAlignment="Center" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="10"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Manifold" HorizontalAlignment="Center" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="1" Grid.Column="0"  Text="NH3 #1" Margin="-1,6,8,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="NH3 #2" Margin="-1,6,5,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="SiH4" Margin="-1,6,5,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="4" Grid.Column="0"  Text="TEB" Margin="-1,6,5,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="TMAl" Margin="-1,6,5,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="6" Grid.Column="0"  Text="TMIn" Margin="-1,6,5,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="7" Grid.Column="0" Text="TMGa" Margin="-1,6,5,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="8" Grid.Column="0" Text="DTMGa" Margin="-1,6,5,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />
                    <TextBlock Grid.Row="9" Grid.Column="0"  Text="Cp2Mg" Margin="-1,6,5,0" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" />

                    <Button Grid.Row="1" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.NH3_1Carrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.NH3_1Source}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="1" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.NH3_1Vent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />

                    <Button Grid.Row="2" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.NH3_2Carrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0"/>
                    <Button Grid.Row="2" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.NH3_2Source}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="2" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.NH3_2Vent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />

                    <Button Grid.Row="3" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.SiH4Carrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="3" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.SiH4Source}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="3" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.SiH4Vent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />

                    <Button Grid.Row="4" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.TEBCarrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="4" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.TEBSource}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0"/>
                    <Button Grid.Row="4" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.TEBVent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />

                    <Button Grid.Row="5" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.TMAlCarrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="5" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.TMAlSource}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="5" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.TMAlVent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />

                    <Button Grid.Row="6" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.TMInCarrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="6" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.TMInSource}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="6" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.TMInVent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />

                    <Button Grid.Row="7" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.TMGaCarrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="7" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.TMGaSource}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="7" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.TMGaVent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />

                    <Button Grid.Row="8" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.DTMGaCarrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="8" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.DTMGaSource}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="8" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.DTMGaVent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />

                    <Button Grid.Row="9" Grid.Column="1" Content="{Binding CurrentSourceStatusViewModel.Cp2MgCarrier}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="9" Grid.Column="2" Content="{Binding CurrentSourceStatusViewModel.Cp2MgSource}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                    <Button Grid.Row="9" Grid.Column="3" Content="{Binding CurrentSourceStatusViewModel.Cp2MgVent}" Background="{DynamicResource Gray_300}" BorderThickness="0,0,0,0" />
                </Grid>
            </StackPanel>
        </Grid>
        <!-- Logical Interlock -->
        <Grid Grid.Row="5">
            <StackPanel Orientation="Vertical" Margin="12,0,12,0">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
                        <Setter Property="Height" Value="18"/>
                    </Style>
                    <Style TargetType="{x:Type Rectangle}">
                        <Setter Property="Width" Value="10"/>
                        <Setter Property="Height" Value="10"/>
                        <Setter Property="Margin" Value="20,0,10,4"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Foreground="{DynamicResource Gray_950}" FontSize="12" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Left" Margin="28,6,0,0" VerticalAlignment="Center"><Bold><Run Text="Logical Interlock"/></Bold></TextBlock>
                <!-- Gas Pressure N2 -->
                <Grid Margin="0,8,0,0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Gas Pressure N2" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding GasPressureN2StateColor}" Width="10" Height="10" RadiusX="99" RadiusY="99" Margin="0"/>
                </Grid>

                <!-- Gas Pressure H2 -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Gas Pressure H2" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding GasPressureH2StateColor}" Width="10" Height="10" RadiusX="99" RadiusY="99" Margin="0"/>
                </Grid>

                <!-- Gas Pressure NH3 -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Gas Pressure NH3" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding GasPressureNH3StateColor}" Width="10" Height="10" RadiusX="99" RadiusY="97" Margin="0"/>
                </Grid>

                <!-- Gas Pressure SiH4 -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Gas Pressure SiH4" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding GasPressureSiH4StateColor}" Width="10" Height="10" RadiusX="99" RadiusY="99" Margin="0"/>
                </Grid>

                <!-- Recipe Start Available -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Recipe Start Available" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding RecipeStartStateColor}" Width="10" Height="10" RadiusX="99" RadiusY="96" Margin="0"/>
                </Grid>

                <!-- Reactor Open Available -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Reactor Open Available" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding ReactorOpenStateColor}" Width="10" Height="10" RadiusX="99" RadiusY="97" Margin="0"/>
                </Grid>

                <!-- Heater can be Turn On -->
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Heater can be Turn On" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding HeaterTurnOnStateColor}" Width="10" Height="10" RadiusX="99" RadiusY="98" Margin="0"/>
                </Grid>
                <Grid VerticalAlignment="Center" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Pump can be Turn On"
               FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}"
               FontSize="10" Margin="20,0,0,0"/>

                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0"
          Stretch="Fill" Stroke="{DynamicResource Gray_300}" 
          StrokeThickness="1" VerticalAlignment="Center" 
          Opacity="0.995" Margin="8,0" />

                    <Rectangle Grid.Column="2" Fill="{Binding PumpTurnOnStateColor}"
               Width="10" Height="10" RadiusX="99" RadiusY="99"
               Margin="0" HorizontalAlignment="Right"/>
                </Grid>

            </StackPanel>

        </Grid>
        <!-- Hardwire Interlock -->
        <Grid Grid.Row="6">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="12,0,12,10">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
                        <Setter Property="Height" Value="18"/>
                    </Style>
                    <Style TargetType="{x:Type Rectangle}">
                        <Setter Property="Width" Value="10"/>
                        <Setter Property="Height" Value="10"/>
                        <Setter Property="Margin" Value="20,0,10,4"/>
                    </Style>
                </StackPanel.Resources>
                <Line X1="5" Y1="0" X2="295" Y2="0" Stroke="{DynamicResource Gray_300}" StrokeThickness="2" Margin="2,2,2,8"/>
                <TextBlock Foreground="{DynamicResource Gray_950}" FontSize="12" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Left" Margin="28,6,0,0" VerticalAlignment="Center"><Bold><Run Text="Hardwire Interlock"/></Bold></TextBlock>
                <Grid Margin="0,8,0,0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Maintenance Key" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding MaintenanceKeyLampColor}" Width="10" Height="10" RadiusX="99" RadiusY="99" Margin="0"/>
                </Grid>

                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Induction Heater" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding InductionHeaterLampColor}" Width="10" Height="10" RadiusX="99" RadiusY="99" Margin="0"/>
                </Grid>

                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Vacuum Pump" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
                    <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                    <Rectangle Grid.Column="2" Fill="{Binding VacuumPumpLampColor}" Width="10" Height="10" RadiusX="99" RadiusY="99" Margin="0"/>
                </Grid>

                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Susceptor Motor" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="10" Margin="20,0,0,0"/>
