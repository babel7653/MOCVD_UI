                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Double O-Ring Vacuum" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12" Margin="20,0,0,0"/>
                            <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                            <Rectangle Grid.Column="2" Fill="{Binding DorVacuumStateLampColor}" Width="10" Height="10" RadiusX="99" RadiusY="99" Margin="0"/>
                        </Grid>

                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Susceptor Temp. Controller Alarm" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12" Margin="20,0,0,0"/>
                            <Line Grid.Column="1" X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="{DynamicResource Gray_300}" StrokeThickness="1" VerticalAlignment="Center" Opacity="0.995" Margin="8,0"/>
                            <Rectangle Grid.Column="2" Fill="{Binding TempControllerAlarmLampColor}" Width="10" Height="10" RadiusX="99" RadiusY="99" Margin="0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
            <!-- Line Heater Current Value -->
            <Grid Grid.Row="5" >
                <Border Style="{StaticResource Tab}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel.Margin>
                            <Thickness Left="{StaticResource p_2}" Right="{StaticResource p_2}" Bottom="{StaticResource p_4}" />
                        </StackPanel.Margin>
                        <Grid Height="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="/Resources/icons/icon=temp.png" Stretch="Fill" />
                            <TextBlock Grid.Column="2" Foreground="{DynamicResource Gray_950}" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left">Line Heater</TextBlock>
                        </Grid>
                        <Grid>
                            <Grid.Margin>
                                <Thickness Left="{StaticResource p_5}" />
                            </Grid.Margin>
                            <Grid.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="TextAlignment" Value="Left"/>
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="Margin" Value="0, 0, 4, 0" />
                                </Style>
                                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource InfoTextBox}" x:Key="LineHeaterInfoBox">
                                    <Setter Property="Width" Value="43"/>
                                    <Setter Property="Height" Value="20"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <StackPanel.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </StackPanel.Margin>
                                <TextBlock Text="1" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                                <TextBox x:Name="tbLineHeater1" Text="{Binding LineHeater1, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LineHeaterInfoBox}">
                                    <TextBox.Margin>
                                        <Thickness Right="{StaticResource p_2}" />
                                    </TextBox.Margin>
                                </TextBox>
                                <TextBlock Text="2" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                                <TextBox x:Name="tbLineHeater2" Text="{Binding LineHeater2, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LineHeaterInfoBox}">
                                    <TextBox.Margin>
                                        <Thickness Right="{StaticResource p_2}" />
                                    </TextBox.Margin>
                                </TextBox>
                                <TextBlock Text="3" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                                <TextBox x:Name="tbLineHeater3" Text="{Binding LineHeater3, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LineHeaterInfoBox}">
                                    <TextBox.Margin>
                                        <Thickness Right="{StaticResource p_2}" />
                                    </TextBox.Margin>
                                </TextBox>
                                <TextBlock Text="4" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                                <TextBox x:Name="tbLineHeater4" Text="{Binding LineHeater4, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LineHeaterInfoBox}" />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <TextBlock Text="5" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                                <TextBox x:Name="tbLineHeater5" Text="{Binding LineHeater5, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LineHeaterInfoBox}">
                                    <TextBox.Margin>
                                        <Thickness Right="{StaticResource p_2}" />
                                    </TextBox.Margin>
                                </TextBox>
                                <TextBlock Text="6" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                                <TextBox x:Name="tbLineHeater6" Text="{Binding LineHeater6, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LineHeaterInfoBox}">
                                    <TextBox.Margin>
                                        <Thickness Right="{StaticResource p_2}" />
                                    </TextBox.Margin>
                                </TextBox>
                                <TextBlock Text="7" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                                <TextBox x:Name="tbLineHeater7" Text="{Binding LineHeater7, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LineHeaterInfoBox}">
                                    <TextBox.Margin>
                                        <Thickness Right="{StaticResource p_2}" />
                                    </TextBox.Margin>
                                </TextBox>
                                <TextBlock Text="8" FontFamily="Segoe UI" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                                <TextBox x:Name="tbLineHeater8" Text="{Binding LineHeater8, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LineHeaterInfoBox}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
            <!-- Colling Water Current Value -->
            <Grid Grid.Row="6">
                <StackPanel Orientation="Vertical" Margin="8,8,8,0">
                    <Grid Height="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="4" />
