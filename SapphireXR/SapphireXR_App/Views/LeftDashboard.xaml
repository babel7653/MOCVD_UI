                            <TextBox  x:Name="tbShowerHeadTemp"  Grid.Column="1" Grid.Row="3" Text="{Binding ShowerHeadTemp}" />
                            <TextBox  x:Name="tbInductionCoilTemp"  Grid.Column="3" Grid.Row="3" Text="{Binding InductionCoilTemp}"  />
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
