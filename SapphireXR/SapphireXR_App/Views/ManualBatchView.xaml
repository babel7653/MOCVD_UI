<Window x:Class="SapphireXR_App.Views.ManualBatchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SapphireXR_App.Views"
        mc:Ignorable="d"
        Title="ManualBatchView" Height="Auto" Width="400">
    <Window.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90" />
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0"></ComboBox>
                <Button x:Name="UserSqtateBatch" Grid.Column="1" Content="Batch" Width="70" Margin="5" Command="{Binding BatchCommand}" />
                <Button x:Name="UserStateSave" Grid.Column="2" Content="Save" Width="70" Margin="5" Command="{Binding SaveCommand}" />
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
               
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Name" />
                <TextBox Width="100"/>
                <Label Content="Ramping Time(s)" />
                <TextBox Width="100"/>
            </StackPanel>
            <Grid Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <DataGrid x:Name="dgUserSettingA" AutoGenerateColumns="False" Margin="5,0,5,0" Height="320"
                       VerticalScrollBarVisibility="Auto" ItemsSource="{Binding lAnalogDeviceIO}" CanUserAddRows="False">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                            <Style TargetType="{x:Type DataGrid}">
                                <Setter Property="BorderBrush" Value="Black"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Device Id" CanUserSort="False" CanUserResize="False" Width="60"
                                         Binding="{Binding Path=ID, Mode=TwoWay}"/>
                            <DataGridTextColumn Header="Device Name" CanUserSort="False" CanUserResize="False" Width="*"
                                         Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn Header="State" CanUserSort="False" CanUserResize="False" Width="100"
                                         Binding="{Binding Path=UserState}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <StackPanel Grid.Row="1" Height="15">
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <DataGrid x:Name="dgUserSettingD" AutoGenerateColumns="False" Margin="5,0,5,0" Height="320"
                       VerticalScrollBarVisibility="Auto" ItemsSource="{Binding lGasDO}" CanUserAddRows="False">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                            <Style TargetType="{x:Type DataGrid}">
                                <Setter Property="BorderBrush" Value="Black"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Device Id" CanUserSort="False" CanUserResize="False" Width="60"
                                         Binding="{Binding Path=ID, Mode=TwoWay}"/>
                            <DataGridTextColumn Header="Device Name" CanUserSort="False" CanUserResize="False" Width="*"
                                         Binding="{Binding Path=Name}"/>
                            <DataGridCheckBoxColumn Header="State" CanUserSort="False" CanUserResize="False" Width="100"
                                         Binding="{Binding Path=UserState}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
