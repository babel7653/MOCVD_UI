<Page x:Class="SapphireXR_App.Views.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SapphireXR_App.Views"
      mc:Ignorable="d" 
      xmlns:oxy="http://oxyplot.org/wpf"
	  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
	  xmlns:vm="clr-namespace:SapphireXR_App.ViewModels"
	  xmlns:control="clr-namespace:SapphireXR_App.Controls"
      d:DesignHeight="810" d:DesignWidth="1320"
      Title="ReportPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="LightGray" HorizontalAlignment="Right" Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="240"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Plot 콘트롤 버턴 배치-->
            <StackPanel Grid.Row="0">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#FF0078D7"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Width" Value="70"/>
                        <Setter Property="Margin" Value="5,5,5,2"/>
                        <Style.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Style.Resources>
                    </Style>
                </StackPanel.Resources>
                <StackPanel Height="30">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="PlotChart" Content="Select Tag" Command="{Binding ShowSeriesSelectionViewCommand}"/>
                        <Button x:Name="PlotSave" Content="Save"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <TextBlock FontSize="14" Margin="10,20,0,0" Foreground="Black" Text="Log1 File"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                        <TextBox x:Name="PlotLog1FileOpen" Width="200" Height="25" VerticalAlignment="Bottom" Text="{Binding Path=Log1FilePath, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button x:Name="PlotLog1FileClose" Content="Open" VerticalAlignment="Center" Command="{Binding OpenLog1FileCommand}"/>
                    </StackPanel>
                   
                    <TextBlock FontSize="14" Margin="10,20,0,0" Foreground="Black" Text="Log2 File"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBox x:Name="PlotLog2FileOpen" Width="200" Height="25" VerticalAlignment="Bottom" Text="{Binding Path=Log2FilePath, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button x:Name="PlotLog2FileClose" Content="Open" VerticalAlignment="Center" Command="{Binding OpenLog2FileCommand}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Grid Grid.Row="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#FF0078D7"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Width" Value="70"/>
                                <Setter Property="Height" Value="20"/>
                                <Setter Property="Margin" Value="5,5,5,2"/>
                                <Style.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Style.Resources>
                            </Style>
                        </StackPanel.Resources>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="LightSkyBlue">
            <oxy:PlotView Model="{Binding FlowControlLivePlot}">
            </oxy:PlotView>
        </Grid>
    </Grid>
</Page>
