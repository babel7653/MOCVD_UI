<Page x:Class="SapphireXR_App.Views.RightDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SapphireXR_App.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="300"
      Title="RightDashboard">

    <Page.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="NanumGothic"/>
        </Style>
    </Page.Resources>
    <Grid Background="{StaticResource DashboardBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="210"/>
            <RowDefinition Height="210"/>
            <RowDefinition Height="280"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- User Status-->
        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Width" Value="240"/>
                        <Setter Property="Height" Value="32"/>
                        <Setter Property="Margin" Value="4"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Foreground="DeepSkyBlue" FontSize="14"  HorizontalAlignment="Center" >
                <Bold>User Status</Bold></TextBlock>
                <Line X1="5" Y1="0" X2="295" Y2="0" Stroke="DeepSkyBlue" StrokeThickness="2" Margin="2,2,2,8"/>
                <StackPanel Orientation="Vertical">
                    <Button Content="Idle State"/>
                    <Button Content="Chamber Open"/>
                    <Button Content="Leak Test"/>
                    <Button Content="Soft OFF"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <!-- Logical Interlock -->
        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
                        <Setter Property="Height" Value="24"/>
                    </Style>
                    <Style TargetType="{x:Type Rectangle}">
                        <Setter Property="Width" Value="10"/>
                        <Setter Property="Height" Value="10"/>
                        <Setter Property="Margin" Value="20,0,10,8"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Foreground="DeepSkyBlue" FontSize="14"  HorizontalAlignment="Center" >
                <Bold>Logical Interlock</Bold></TextBlock>
                <Line X1="5" Y1="0" X2="295" Y2="0" Stroke="DeepSkyBlue" StrokeThickness="2" Margin="2,2,2,8"/>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime"/>
                    <TextBlock Text="Reacipe Start Available"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime"/>
                    <TextBlock Text="Reactor Open Available"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime"/>
                    <TextBlock Text="Induction Heater can be Turned On"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime"/>
                    <TextBlock Text="Vacuum Pump can be Turned On"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime"/>
                    <TextBlock Text="Double O-Ring Vacuum State"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime"/>
                    <TextBlock Text="Process Gas Available"/>
                </StackPanel>

            </StackPanel>

        </Grid>
        <!-- Hardwire Interlock -->
        <Grid Grid.Row="3">
            <StackPanel Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
                        <Setter Property="Height" Value="24"/>
                    </Style>
                    <Style TargetType="{x:Type Rectangle}">
                        <Setter Property="Width" Value="10"/>
                        <Setter Property="Height" Value="10"/>
                        <Setter Property="Margin" Value="20,0,10,8"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Foreground="DeepSkyBlue" FontSize="14"  HorizontalAlignment="Center"  TextAlignment="Center">
                <Bold>Hardwire Interlock</Bold></TextBlock>
                <Line X1="5" Y1="0" X2="295" Y2="0" Stroke="DeepSkyBlue" StrokeThickness="2" Margin="2,2,2,8"/>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Maintenance Key"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Induction Heater"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Vacuum Pump"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Susceptor Motor"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Cooling Water"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Clean Dry Air"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Door - Reactor Cabinet"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Door - Gas Delivery Cabinet"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Lime" />
                    <TextBlock Text="Door - Power Distribute Cabinet"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <!-- Event Log -->
        <Grid Grid.Row="4" >
            <StackPanel Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}"/>
                        <Setter Property="Height" Value="24"/>
                    </Style>
                </StackPanel.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="DeepSkyBlue" FontSize="14" Width="120" HorizontalAlignment="Center" Margin="100,0,0,0">
                    <Bold>Event Log</Bold></TextBlock>
                    <Button Height="20" Width="80" Content="Clear"/>
                </StackPanel>
                <Line X1="5" Y1="0" X2="295" Y2="0" Stroke="DeepSkyBlue" StrokeThickness="2" Margin="2,2,2,8"/>
                <DataGrid x:Name="dgEventLog">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="70"/>
                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="160"/>
                        <DataGridTextColumn Header="Date/Time" Binding="{Binding Date}" Width="70"/>
                     </DataGrid.Columns>
                    
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
