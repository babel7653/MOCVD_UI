<Page x:Class="SapphireXR_App.Views.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SapphireXR_App.Views"
      mc:Ignorable="d" 
      d:DesignWidth="1620" d:DesignHeight="1032"
      Title="SettingPage" Background="{StaticResource Gray_300}">
    <Page.Resources>
        <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource EventLog}">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource EventLogColumnHeader}">
                        <Setter Property="Height" Value="28" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SettingTabControl" TargetType="TabControl" BasedOn="{StaticResource DefaultVerticalTabControl}">
            <Setter Property="Background" Value="{StaticResource Gray_300}" />
        </Style>
        <Style x:Key="SetingTabItem" TargetType="TabItem" BasedOn="{StaticResource DefaultVerticalTabItem}">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentPresenter Content="{TemplateBinding Content}">
                            <ContentPresenter.LayoutTransform>
                                <RotateTransform Angle="270"/>
                            </ContentPresenter.LayoutTransform>
                        </ContentPresenter>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border  Name="Panel">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" />
                            <Border.CornerRadius>
                                <CornerRadius TopLeft="{StaticResource r_2}" BottomLeft="{StaticResource r_2}"/>
                            </Border.CornerRadius>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="{StaticResource Gray_50}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Panel" Property="Background" Value="{StaticResource Gray_300}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBox}" x:Key="DataGridCheckBox">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="Label" x:Key="SectionTitle">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Foreground" Value="{StaticResource Gray_950}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Bottom="{StaticResource p_2}" />
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <TabControl TabStripPlacement="Left" Style="{StaticResource SettingTabControl}" Margin="{StaticResource p_5_sqrt}" Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource SetingTabItem}" />
            </TabControl.Resources>
            <!--Tab for Alarm Setting -->
            <TabItem Name="AlarmSetting" Header="Alarm" Height="200">
                <TabItem.Margin>
                    <Thickness Top="{StaticResource p_5}" Bottom="-20" />
                </TabItem.Margin>
                <TabItem.Content>
                    <Grid>
                        <Rectangle RadiusX="{StaticResource r_5}" RadiusY="{StaticResource r_5}" Fill="{StaticResource Gray_50}"/>
                        <Grid>
                            <Grid Margin="{StaticResource p_5_sqrt}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="495"/>
                                    <ColumnDefinition Width="495"/>
                                    <ColumnDefinition Width="471"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.Margin>
                                        <Thickness Right="{StaticResource p_6}" />
                                    </Grid.Margin>
                                    <Rectangle RadiusX="{StaticResource r_5}" RadiusY="{StaticResource r_5}" Stroke="{StaticResource Gray_300}"></Rectangle>
                                    <StackPanel Orientation="Vertical" Margin="{StaticResource p_5_sqrt}">
                                        <Label Style="{StaticResource SectionTitle}">
                                            <Bold> Logical Interlock </Bold>
                                        </Label>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                            <StackPanel.Margin>
                                                <Thickness Bottom="{StaticResource p_2}" />
                                            </StackPanel.Margin>
                                            <TextBlock Text="Alarm Deviation(%)" Style="{StaticResource infoTextBlockLeft}" />
                                            <TextBox x:Name="tbAlarmDeviatin" Text="{Binding Path=dPreSet[AlarmDeviation]}" Width="90" Height="36" Style="{StaticResource InfoTextBox}">
                                                <TextBox.Margin>
                                                    <Thickness Left="{StaticResource p_2}" Right="{StaticResource p_4}" />
                                                </TextBox.Margin>
                                            </TextBox>
                                            <TextBlock FontSize="12" Text="Warning Deviation(%)" Style="{StaticResource infoTextBlockLeft}" />
                                            <TextBox x:Name="tbWarningDeviation" Text="{Binding Path=dPreSet[WarningDeviation]}" Width="90" Height="36" Style="{StaticResource InfoTextBox}">
                                                <TextBox.Margin>
                                                    <Thickness Left="{StaticResource p_2}" />
                                                </TextBox.Margin>
                                            </TextBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Margin>
                                                <Thickness Bottom="{StaticResource p_2}" />
                                            </StackPanel.Margin>
                                            <TextBlock FontSize="12" Text="Delay Time(s)" Style="{StaticResource infoTextBlockLeft}" />
                                            <TextBox x:Name="tbAlarmDelayTimeA" Text="{Binding Path=dPreSet[AlarmDelayTimeA]}" Height="36" Style="{StaticResource InfoTextBox}" Width="350">
                                                <TextBox.Margin>
                                                    <Thickness Left="{StaticResource p_2}" />
                                                </TextBox.Margin>
                                            </TextBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Margin>
                                                <Thickness Bottom="{StaticResource p_3}" />
                                            </StackPanel.Margin>
                                            <Button x:Name="btnAlarmSettingLoad" Content="Load" Width="209.5" Height="28" Command="{Binding AlarmSettingLoadCommand}" Style="{StaticResource DefaultButton}">
                                                <Button.Margin>
                                                    <Thickness Right="{StaticResource p_2}" />
                                                </Button.Margin>
                                            </Button>
                                            <Button x:Name="btnAlarmSettingSave" Content="Save" Width="209.5" Height="28" Command="{Binding AlarmSettingSaveCommand}" Style="{StaticResource PrimaryButton}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <DataGrid x:Name="dgAlarmSettingA" Height="740" ItemsSource="{Binding lAnalogDeviceIO}">
                                                <DataGrid.Resources>
                                                   <Style TargetType="ScrollBar" BasedOn="{StaticResource DefaultScrollbar}" />
                                                </DataGrid.Resources>
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="ID" CanUserSort="False" CanUserResize="False" IsReadOnly="True" Width="50" Binding="{Binding Path=ID}" ElementStyle="{StaticResource EventLogElement}" />
                                                    <DataGridTextColumn Header="Device Name" CanUserSort="False" CanUserResize="False" Width="*" IsReadOnly="True"  Binding="{Binding Path=Name}" ElementStyle="{StaticResource EventLogElement}" />
                                                    <DataGridCheckBoxColumn Header="Alarm" Width="50"	CanUserSort="False" Binding="{Binding Path=AlarmSet}" EditingElementStyle="{StaticResource DataGridCheckBox}" ElementStyle="{StaticResource DataGridCheckBox}" />
                                                    <DataGridCheckBoxColumn Header="Warning" Width="50"	CanUserSort="False" Binding="{Binding Path=WarningSet}" EditingElementStyle="{StaticResource DataGridCheckBox}" ElementStyle="{StaticResource DataGridCheckBox}" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <!-- 알람(Digital) 설정 -->
                                <Grid Grid.Column="1">
                                    <Grid.Margin>
                                        <Thickness Right="{StaticResource p_6}" />
                                    </Grid.Margin>
                                    <Rectangle RadiusX="{StaticResource r_5}" RadiusY="{StaticResource r_5}" Stroke="{StaticResource Gray_300}" />
                                    <StackPanel Orientation="Vertical" Margin="{StaticResource p_5_sqrt}">
                                        <Label Style="{StaticResource SectionTitle}">
                                            <Bold>Alarm Setting (Digital)</Bold>
                                        </Label>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Margin>
                                                <Thickness Bottom="{StaticResource p_3}" />
                                            </StackPanel.Margin>
                                            <TextBlock Text="Delay Time(s)" Style="{StaticResource infoTextBlockLeft}">
                                                <TextBlock.Margin>
                                                    <Thickness Right="{StaticResource p_2}" />
                                                </TextBlock.Margin>
                                            </TextBlock>
                                            <TextBox x:Name="tbAlarmDelayTimeD" Text="{Binding Path=dPreSet[AlarmDelayTimeD]}" Width="135.5" Height="36" Style="{StaticResource InfoTextBox}">
                                                <TextBox.Margin>
                                                    <Thickness Right="{StaticResource p_4}" />
                                                </TextBox.Margin>
                                            </TextBox>
                                            <Button x:Name="btnEventSettingSave" Content="Save" Width="200" Height="28" Command="{Binding  AlarmSettingSaveCommand}" Style="{StaticResource PrimaryButton}" />
                                        </StackPanel>
                                        <DataGrid x:Name="dgAlarmSettingD" ItemsSource="{Binding lSwitchDI}">
                                            <DataGrid.Resources>
                                                <Style TargetType="ScrollBar" BasedOn="{StaticResource DefaultScrollbar}" />
                                            </DataGrid.Resources>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="ID" IsReadOnly="True"  CanUserSort="False" CanUserResize="False" Width="50" Binding="{Binding Path=ID}" ElementStyle="{StaticResource EventLogElement}" />
                                                <DataGridTextColumn Header="Device Name" IsReadOnly="True"  CanUserSort="False" CanUserResize="False" Width="*" Binding="{Binding Path=Name}" ElementStyle="{StaticResource EventLogElement}" />
                                                <DataGridCheckBoxColumn Header="Alarm" CanUserSort="False" CanUserResize="False" Width="50" Binding="{Binding Path=AlarmSet}" ElementStyle="{StaticResource DataGridCheckBox}" EditingElementStyle="{StaticResource DataGridCheckBox}" />
                                                <DataGridCheckBoxColumn Header="Warning" CanUserSort="False" CanUserResize="False" Width="50" Binding="{Binding Path=WarningSet}" ElementStyle="{StaticResource DataGridCheckBox}"  EditingElementStyle="{StaticResource DataGridCheckBox}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Grid>
                                <!-- LogBook 테이블 -->
                                <Grid Grid.Column="2">
                                    <Rectangle RadiusX="{StaticResource r_5}" RadiusY="{StaticResource r_5}" Stroke="{StaticResource Gray_300}" />
                                    <StackPanel Orientation="Vertical" Margin="{StaticResource p_5_sqrt}">
                                        <Label Style="{StaticResource SectionTitle}">
                                            <Bold>Log Book</Bold>
                                        </Label>
                                        <Button x:Name="LogFileRead" Content="Load" Style="{StaticResource DefaultButton}" Height="29">
                                            <Button.Margin>
                                                <Thickness Bottom="{StaticResource p_3}" />
                                            </Button.Margin>
                                        </Button>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Margin>
                                                <Thickness Bottom="{StaticResource p_3}" />
                                            </StackPanel.Margin>
                                            <StackPanel.Resources>
                                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButton}">
                                                    <Setter Property="Height" Value="30" />
                                                    <Setter Property="Width" Value="102" />
                                                    <Setter Property="FontSize" Value="14" />
                                                </Style>
                                            </StackPanel.Resources>
                                            <Button x:Name="LogFilterAlarm" Foreground="#FF6063">
                                                <Bold>Alarm</Bold>
                                            </Button>
                                            <Button x:Name="LogFilterWarning" Foreground="#FF8D60" >
                                                <Button.Margin>
                                                    <Thickness Left="{StaticResource p_2}" Right="{StaticResource p_2}" />
                                                </Button.Margin>
                                                <Bold>Warning</Bold>
                                            </Button>
                                            <Button x:Name="LogFilterInformation" Foreground="#6BFF83">
                                                <Button.Margin>
                                                    <Thickness Right="{StaticResource p_2}" />
                                                </Button.Margin>
                                                <Bold>Information</Bold>
                                            </Button>
                                            <Button x:Name="LogFilterClear" Foreground="{StaticResource Gray_700}">
                                                <Bold>Clear</Bold>
                                            </Button>
                                        </StackPanel>
                                        <DataGrid x:Name="LogbookTable" Height="770">
                                            <DataGrid.Resources>
                                                <Style TargetType="ScrollBar" BasedOn="{StaticResource DefaultScrollbar}" />
                                            </DataGrid.Resources>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Type" IsReadOnly="True" CanUserSort="False" CanUserResize="False" Width="60" Binding="{Binding}" ElementStyle="{StaticResource EventLogElement}" />
                                                <DataGridTextColumn Header="Massage" IsReadOnly="True" CanUserSort="False" CanUserResize="False" Width="*" Binding="{Binding}" ElementStyle="{StaticResource EventLogElement}" />
                                                <DataGridTextColumn Header="Date" IsReadOnly="True"  CanUserSort="False" CanUserResize="False" Width="100" Binding="{Binding Date, StringFormat=d}" ElementStyle="{StaticResource EventLogElement}" />
                                                <DataGridTextColumn Header="Time" IsReadOnly="True"  CanUserSort="False" CanUserResize="False" Width="100" Binding="{Binding Time}" ElementStyle="{StaticResource EventLogElement}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                    </Grid>
                    </Grid>
                </TabItem.Content>

            </TabItem>
            <!-- Tab for Device Setting -->
            <TabItem Name="DeviceSetting" Header="Device" Height="200">
                <TabItem.Margin>
                    <Thickness Top="{StaticResource p_5}" Bottom="-20" />
                </TabItem.Margin>
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="Blue">
                            <TextBlock FontSize="14" Text="Device Setting" FontWeight="Bold" Foreground="White"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Horizontal">

                                <StackPanel Orientation="Vertical" Width="420">
                                    <!-- Interlock 설정 테이블-->
                                    <GroupBox Header="Interlock Setting" BorderBrush="LightSteelBlue" BorderThickness="2" Margin="2,10,2,0"
                                             FontSize="14">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                            </Grid.RowDefinitions>
                                            <!-- DOR Release -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Double O-Ring Release" FontWeight="Bold" VerticalAlignment="Bottom"/>
                                            <Button Grid.Row="0" Grid.Column="1" x:Name="InterlockSave" Content="Save" Width="70" HorizontalAlignment="Left"
                                                   Command="{Binding AlarmSettingSaveCommand}">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="6"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                            <CheckBox x:Name="cbRecipeNotRunning"  Grid.Row="1" Grid.Column="0" Content="Recipe Not Running" 
                                                     IsChecked="{Binding Path=dInterLockD[RecipeNotRunning]}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <CheckBox x:Name="cbReactorPressureLimit" Grid.Row="2" Grid.Column="0" Content="Reactor Pressure(Torr) >="
                                                     IsChecked="{Binding Path=dInterLockA[DORReactorPressure].IsEnable}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <TextBox x:Name="tbReactorPressureLimit" Grid.Row="2" Grid.Column="1" Width="150" HorizontalAlignment="Left" Margin="2"
                                                    Text="{Binding Path=dInterLockA[DORReactorPressure].Treshold}"/>
                                            <CheckBox x:Name="cbSusceptorTemperature" Grid.Row="3" Grid.Column="0" Content="Susceptor Temperature" 
                                                     IsChecked="{Binding Path=dInterLockA[DORSusceptorTemperature].IsEnable}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <TextBox x:Name="DORTemperatureSet" Grid.Row="3" Grid.Column="1" Width="150" HorizontalAlignment="Left" Margin="2"
                                                    Text="{Binding Path=dInterLockA[DORSusceptorTemperature].Treshold}"/>

                                            <!-- DOR Lock -->
                                            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Text="Double O-Ring Lock" FontWeight="Bold" VerticalAlignment="Bottom"/>
                                            <CheckBox Grid.Row="5" Grid.Column="0" Content=" Vacuum Valve Close"
                                                     IsChecked="{Binding Path=dInterLockD[VacuumValveClose]}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <CheckBox Grid.Row="6" Grid.Column="0" Content="Pressure Limit" 
                                                     IsChecked="{Binding Path=dInterLockA[DORPressureLimit].IsEnable}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <TextBox x:Name="DORPressureLimit" Grid.Row="6" Grid.Column="1" Width="150" HorizontalAlignment="Left" Margin="2"
                                                    Text="{Binding Path=dInterLockA[DORSusceptorTemperature].Treshold}"/>
                                            <CheckBox Grid.Row="7" Grid.Column="0" Content=" Alarm Limit Value" 
                                                     IsChecked="{Binding Path=dInterLockA[AlarmLimit].IsEnable}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <TextBox x:Name="DORAlarmLimit" Grid.Row="7" Grid.Column="1" Width="150" HorizontalAlignment="Left" Margin="2"
                                                    Text="{Binding Path=dInterLockA[AlarmLimit].Treshold}"/>
                                            <!-- Auto Power ON -->
                                            <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Text="Auto Power ON" FontWeight="Bold" VerticalAlignment="Bottom"/>
                                            <CheckBox Grid.Row="9" Grid.Column="0" Content=" Induction Power Supply" 
                                                    IsChecked="{Binding Path=dInterLockD[InductionPowerSupply]}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <CheckBox Grid.Row="10" Grid.Column="0" Content=" Susceptor Rotation Motor"
                                                    IsChecked="{Binding Path=dInterLockD[SusceptorRotationMotor]}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <CheckBox Grid.Row="11" Grid.Column="0" Content=" Reactor Cabinet Lamp" 
                                                     IsChecked="{Binding Path=dInterLockD[ReactorCabinetLamp]}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <CheckBox Grid.Row="12" Grid.Column="0" Content=" Gas Control Cabinet Lamp" 
                                                     IsChecked="{Binding Path=dInterLockD[GasControlLamp]}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                            <TextBlock Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Text="Misc." FontWeight="Bold" VerticalAlignment="Bottom"/>
                                            <TextBlock Grid.Row="14" Grid.Column="0" Margin="15,0,0,0" Text="Log Interval in Recipe Run (Millisecond)" />
                                            <local:NumberBox Grid.Row="14" Grid.Column="1" Width="150" HorizontalAlignment="Left" Margin="2" Text="{Binding LogIntervalInRecipeRun}"/>
                                        </Grid>
                                    </GroupBox>
                                    <!-- Preset State 설정 -->
                                    <GroupBox Header="Preset State" BorderBrush="LightSteelBlue" BorderThickness="2" Margin="2,10,2,0"
                                              FontSize="14">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                                                <TextBlock Width="200"  Text="System Start State"/>
                                                <ComboBox x:Name="comboSystemStart" Width="100" IsReadOnly="True"
                                                          SelectedIndex="{Binding Path=userstate.StartState}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="2">
                                                <TextBlock Width="200"  Text="Alarm State"/>
                                                <ComboBox Name="comboAlarmStart" Width="100"  IsReadOnly="True" 
                                                          SelectedIndex="{Binding Path=userstate.AlarmState}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="2">
                                                <TextBlock  Width="200" Text="Recipe End"/>
                                                <ComboBox Name="comboRecipeEnd" Width="100" IsReadOnly="True" 
                                                          SelectedIndex="{Binding Path=userstate.EndState}" />
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                    <!--Magnetic Contact-->
                                    <GroupBox Header="Module Power (Magnetic Contact)" BorderBrush="LightSteelBlue" BorderThickness="2" Margin="2,10,2,0"
                                              FontSize="14">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                                                <TextBlock Width="200" Text="Induction Heater Power"/>
                                                <Button Content="{Binding InductionHeaterPowerOn}" Command="{Binding ToggleInductionHeaterPowerCommand}" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="2">
                                                <TextBlock Width="200" Text="Thermal Bath Power"/>
                                                <Button Content="{Binding ThermalBathPowerOn}" Command="{Binding ToggleThermalBathPowerCommand}" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="2">
                                                <TextBlock Width="200" Text="Vacuum Pump Power"/>
                                                <Button Content="{Binding VaccumPumpPowerOn}" Command="{Binding ToggleVaccumPumpPowerCommand}" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="2">
                                                <TextBlock Width="200" Text="Line Heater Power"/>
                                                <Button Content="{Binding LineHeaterPowerOn}" Command="{Binding ToggleLineHeaterPowerCommand}" />
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                </StackPanel>
                                <!-- Device Name 설정 테이블-->
                                <GroupBox Header="Device Naming" Width="420"
                                          BorderBrush="LightSteelBlue" BorderThickness="2" Margin="2,10,2,0"
                                          FontSize="14">
                                    <StackPanel>
                                        <Button x:Name="DeviceNameSave" Content="Save" Width="70" HorizontalAlignment="Right" Margin="0,0,50,0">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="6"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                        <Grid Height="950">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="50*"/>
                                            </Grid.RowDefinitions>
                                            <!-- Analog Device Name 설정 테이블-->
                                            <StackPanel Orientation="Vertical">
                                                <DataGrid x:Name="dgMaxValueSetting" Width="425" Height="460" AutoGenerateColumns="False" Margin="5,0,5,0"
                                                           ItemsSource="{Binding lAnalogDeviceIO}" CanUserAddRows="False">
                                                    <DataGrid.Resources>
                                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="Background" Value="Transparent"/>
                                                        </Style>
                                                        <Style TargetType="{x:Type DataGrid}">
                                                            <Setter Property="BorderBrush" Value="Black"/>
                                                            <Setter Property="BorderThickness" Value="1"/>
                                                            <Setter Property="VerticalScrollBarVisibility" Value="Visible"/>
                                                        </Style>
                                                    </DataGrid.Resources>
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="ID" CanUserSort="False" CanUserResize="False" Width="60"
                                                                        Binding="{Binding Path=ID, Mode=TwoWay}"/>
                                                        <DataGridTextColumn Header="Device Name" CanUserSort="False" CanUserResize="False" Width="*"
                                                                        Binding="{Binding Path=Name}"/>
                                                        <DataGridTextColumn Header="Max Value" CanUserSort="False" CanUserResize="False" Width="120"
                                                                        Binding="{Binding Path=MaxValue}"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>

                                            </StackPanel>
                                            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"  Background="LightSteelBlue"
                                                      ShowsPreview="True" Height="3"/>
                                            <!-- Digital Device Name 설정 테이블-->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                <StackPanel>
                                                    <DataGrid x:Name="DigitalMappingSetting" Width="425" Height="460" AutoGenerateColumns="False" Margin="5,0,5,0">
                                                        <DataGrid.Resources>
                                                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                <Setter Property="Background" Value="Transparent"/>
                                                            </Style>
                                                            <Style TargetType="{x:Type DataGrid}">
                                                                <Setter Property="BorderBrush" Value="Black"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                                <Setter Property="VerticalScrollBarVisibility" Value="Visible"/>
                                                            </Style>
                                                        </DataGrid.Resources>
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Header="Device ID" CanUserSort="False" CanUserResize="False" Width="60"
                                                                                    Binding="{Binding}"/>
                                                            <DataGridTextColumn Header="Device Name" CanUserSort="False" CanUserResize="False" Width="*"
                                                                                    Binding="{Binding}"/>
                                                            <DataGridTextColumn Header="Sol. ID" CanUserSort="False" CanUserResize="False" Width="120"
                                                                                    Binding="{Binding}"/>
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </StackPanel>


                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                                <!-- Component I/O List 테이블-->
                                <GroupBox Header="I/O List" Width="420"
                                          BorderBrush="LightSteelBlue" BorderThickness="2" Margin="2,10,2,0"
                                          FontSize="14">
                                    <StackPanel>
                                        <DataGrid x:Name="IOList" AutoGenerateColumns="False" Margin="5,0,5,0" ItemsSource="{Binding IOList}">
                                            <DataGrid.Resources>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Style>
                                                <Style TargetType="{x:Type DataGrid}">
                                                    <Setter Property="BorderBrush" Value="Black"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                </Style>
                                            </DataGrid.Resources>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Name" CanUserSort="False" CanUserResize="False" Width="*"
                                                                Binding="{Binding Name}"/>
                                                <DataGridCheckBoxColumn Header="On/Off" CanUserSort="False" CanUserResize="False" Width="60"
                                                               IsReadOnly="True" Binding="{Binding OnOff, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataGrid.Columns>
                                        </DataGrid>

                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
