<UserControl x:Class="SapphireXR_App.Controls.UcGasState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SapphireXR_App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="38" d:DesignWidth="90"
						 Loaded="UserControl_Loaded">
	
	<StackPanel Height="38" Width="90">
		<TextBlock x:Name="GasName" Height="22" Width="94" Margin="-2"
							 Background="{DynamicResource SourceMainColor}" Foreground="White"
							 FontSize="16" TextAlignment="Center" VerticalAlignment="Center"/>
		<StackPanel Height="22" Width="90" Background="{DynamicResource SourceSecondaryColor}" Orientation="Horizontal">
			<Ellipse Width="7" Height="7" Fill="LawnGreen" Margin="5,0,0,0"/>
			<Label x:Name="PressureValue" HorizontalAlignment="Right" FontSize="14" Height="25" Width="76" Margin="0 -8 0 -1"
						 Content="5555"
						 HorizontalContentAlignment="Right"/>
		</StackPanel>
	</StackPanel>
</UserControl>
